<div class="registration">


<%= form_with model: @user do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-3 col-form-label">
      <%= f.label 'Новый логин' %>
    </div>

    <div class="col-sm-4">
      <%= f.text_field :new_login, class: 'form-control form-control-sm' %>
    </div>
  </div>


  <div class="reg_sub">
  <%= f.submit "Изменить логин", class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>

